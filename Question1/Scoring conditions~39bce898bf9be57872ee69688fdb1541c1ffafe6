 while(count<=number_of_rounds)
     {
        printf("Enter lucky number\n");
        scanf("%d", &lucky_number);
        remainder = lucky_number %secret_number;
    if (remainder == 0){
        printf("draw");
        total_score += 1;
    }
    else if (remainder %2 == 0){
        printf("win");
        total_score += 3;
    }
    else {
        printf("lose");
        total_score -= 3;
        }
        count= count + 1;

     }
